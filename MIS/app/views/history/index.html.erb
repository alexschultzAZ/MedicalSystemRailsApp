<div class="container entry-content">
	<div class="row">
		<div class="col-md-12 page-header">
<h1><%= @headertext %></h1>
<p>You are login as <%= session[:access_id]%></p>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 main-content">
<table rules = "all" class="table table-striped table-bordered patient-table">
    <thead>
        <th>Description</th>
        <th>Date</th>
        <th></th>
    </thead>
    <tbody>
<% @histories.each do |history| %>
    <tr>
    	<td><%= history.description %></td>
    	<td><%= history.date %></td>
        <% if @allowEdit == true %>
			<td><%= link_to "Edit", {:controller => "history", :action => "edit", :history_id => history.id},{:class => "btn btn-info"} %></td>
        <% end %>
        <% if @allowDelete == true %>
        	<td><%= link_to "Delete", {:controller => "history", :action => "delete", :history_id => history.id},{:class => "btn btn-danger"} %></td>
        <% end %>
    </tr>
<% end %>
    </tbody>
</table>
<br>
<%= link_to "Add History Item", {:controller => "history", :action => "create", :patient_id => params[:id]},{:class => "btn btn-primary"} %>
<br><br>
<a class="btn btn-info" href= "<%= @main_route %>">Main Menu</a>
			</div>
		</div>
	</div>
