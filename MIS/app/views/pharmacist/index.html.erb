<div class="container entry-content">
  <div class="row">
    <div class="col-md-12 page-header">
        <h1>Pharmacist Index</h1>
        <p></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 table-responsive">
      <table rules = "all" class="table table-striped table-bordered patient-table">
        <thead>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
        </thead>
        <tbody>
            <% @pharmacists.each do |pharmacist| %>
            <tr>
                <td><%= pharmacist.name_first[0] + pharmacist.name_last[0] + pharmacist.id.to_s %></td>
                <td><%= pharmacist.name_first %></td>
                <td><%= pharmacist.name_last%></td>
                <% if @valid == true %>
                <td class="last-col"><%= link_to "Delete", {:controller => "pharmacist", :action => "delete", :id => pharmacist.id},{:class=>'btn btn-danger'} %></td>
                <td class="last-col"><%= link_to "Edit", {:controller => "pharmacist", :action => "edit", :id => pharmacist.id},{:class=>'btn btn-info'} %></td>
                <% end %>
            </tr>
            <% end %>
        </tbody>
      </table>
    <% if @valid == true %>
        <p><a class="btn btn-primary" href="/pharmacist/register">Add Pharmacist</a></p>
    <% end %>
      <p><a class="btn btn-info" href= "<%= @main_route %>">Main Menu</a></p>
    </div>
  </div>
</div>