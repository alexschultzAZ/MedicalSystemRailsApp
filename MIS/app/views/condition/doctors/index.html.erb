<div class="container entry-content">
  <div class="row">
    <div class="col-md-12 page-header">
      <h1>Doctors#index</h1>
      <p>Find me in app/views/doctors/index.html.erb</p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 table-responsive">
      <table rules = "all" class="table table-striped table-bordered patient-table">
        <thead>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Specialty</th>
        </thead>
        <tbody>
        <% @doctors.each do |doctor| %>
            <tr>
              <td><%= doctor.name_first[0] + doctor.name_last[0] + doctor.id.to_s %></td>
              <td><%= doctor.name_first %></td>
              <td><%= doctor.name_last%></td>
              <td><%= doctor.specialty%></td>
              <% if @valid == true %>
                  <td class="last-col"><%= link_to "Delete", {:controller => "doctors", :action => "delete", :id => doctor.id},{:class=> "btn btn-danger"} %></td>
                  <td class="last-col"><%= link_to "Edit", {:controller => "doctors", :action => "edit", :id => doctor.id},{:class=> "btn btn-info"} %></td>
              <% end %>
            </tr>
        <% end %>
        </tbody>
      </table>
      <br>
      <% if @valid == true %>
          <p><a class="btn btn-primary" href="/doctors/register">Add Doctor</a></p>
      <% end %>
      <p><a class="btn btn-info" href= "<%= @main_route %>">Main Menu</a></p>
    </div>
  </div>
</div>