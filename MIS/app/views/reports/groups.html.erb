<div class="container entry-content">
  <div class="row">
    <div class="col-md-12 page-header">
<h1>Report: Patient Groupings</h1>
<p>You are login as <%= session[:access_id]%></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 main-content">
<% if @total != 0%>
<table rules = "all" class="table table-striped table-bordered patient-table">
    <thead>
		<th>Patient Group</th>
        <th>Number of Patients</th>
        <th>Percentage of Total Patients</th>
    </thead>
    <tbody>
    <tr>
		<td>General</td>
        <td><%= @counts[0] %></td>
        <td><%= number_to_percentage((@counts[0].to_f/@total.to_f)*100, precision: 2) %></td>
    </tr>
    <tr>
        <td>Intensive Care</td>
        <td><%= @counts[1] %></td>
        <td><%= number_to_percentage((@counts[1].to_f/@total.to_f)*100, precision: 2) %></td>
    </tr>
    <tr>
        <td>Recovery</td>
        <td><%= @counts[2] %></td>
        <td><%= number_to_percentage((@counts[2].to_f/@total.to_f)*100, precision: 2) %></td>
    </tr>
    <tr>
        <td>Surgery</td>
        <td><%= @counts[3] %></td>
        <td><%= number_to_percentage((@counts[3].to_f/@total.to_f)*100, precision: 2) %></td>
    </tr>
    <tr>
        <td>Cancer Treatment</td>
        <td><%= @counts[4] %></td>
        <td><%= number_to_percentage((@counts[4].to_f/@total.to_f)*100, precision: 2) %></td>
    </tr>
    <tr>
    	<td>TOTAL:</td>
    	<td><%= @total %></td>
      <td>100%</td>
    </tr>
    </tbody>
</table>
<% else %>
    <p>No registered patients found.</p>
<% end %>
<a class="btn btn-info" href= "<%= @main_route %>">Main Menu</a>
</div>
      </div>
    </div>