<div class="container entry-content">
	<div class="row">
		<div class="col-md-12 page-header">
<h1><%= @headertext %></h1>
<p>You are login as <%= session[:access_id]%></p>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 main-content">
<table rules = "all" class="table table-striped table-bordered patient-table">
    <thead>
        <th>ID</th>
    	<th>Description</th>
    	<th></th>
        <th></th>
    </thead>
    <tbody>
<% @labworks.each do |labwork| %>
    <tr>
    	<td><%= labwork.id %></td>
    	<td><%= labwork.description %></td>
        <% if labwork.complete == true %>
    	<td><%= link_to "Download Report", {:controller => "labwork", :action => "download", :labwork_file => labwork.data},{:class=>"btn btn-primary"} %></td>
        <% else %>
            <td></td>
        <% end %>
        <% if @allowEdit == true %>
		<td><%= link_to "Edit", {:controller => "labwork", :action => "edit", :labwork_id => labwork.id},{:class=>"btn btn-info"} %></td>
        <% end %>
        <% if @allowDelete == true %>
        <td><%= link_to "Delete", {:controller => "labwork", :action => "delete", :labwork_id => labwork.id},{:class=>"btn btn-danger"} %></td>
        <% end %>
    </tr>
<% end %>
    </tbody>
</table>
<% if @allowCreate == true %>
<br>
					<p>
<%= link_to "Request Labwork", {:controller => "labwork", :action => "create", :patient_id => params[:id]},{:class=>"btn btn-primary"} %>
<% end %>
</p><p>
<a class="btn btn-info" href= "<%= @main_route %>">Main Menu</a>
			</p>
</div>
		</div>
	</div>
