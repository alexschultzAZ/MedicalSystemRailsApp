    <div class="row">
      <div class="col-md-12 page-header">
        <div class="col-md-12 page-header-text"><h1>Patient Login</h1></div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 main-content">
          <a href="../patients/login" class="btn btn-danger login-button">Patient Login</a>
          <a href="../doctors/login" class="btn btn-primary login-button">Doctor Login</a>
          <a href="../nurses/login" class="btn btn-primary login-button">Nurse Login</a>
