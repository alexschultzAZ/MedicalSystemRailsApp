<div class="container entry-content">
  <div class="row">
    <div class="col-md-12 page-header">
        <h1>Nurses#index</h1>
        <p>Find me in app/views/nurses/index.html.erb</p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 table-responsive">
      <table rules = "all" class="table table-striped table-bordered patient-table">
        <thead>
            <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
        </thead>
        <tbody>
            <% @nurses.each do |nurse| %>
                <tr>
                <td><%= nurse.name_first[0] + nurse.name_last[0] + nurse.id.to_s %></td>
                    <td><%= nurse.name_first %></td>
                    <td><%= nurse.name_last%></td>
                    <% if @valid == true %>
                    <td class="last-col"><%= link_to "Delete", {:controller => "nurses", :action => "delete", :id => nurse.id},{:class=>'btn btn-danger'} %></td>
                    <td class="last-col"><%= link_to "Edit", {:controller => "nurses", :action => "edit", :id => nurse.id},{:class=>'btn btn-info'} %></td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
      </table>
      <% if @valid == true %>
          <p><a class="btn btn-primary" href="/nurses/register">Add Nurse</a></p>
      <% end %>
      <p><a class="btn btn-info" href= "<%= @main_route %>">Main Menu</a></p>
    </div>
  </div>
</div>