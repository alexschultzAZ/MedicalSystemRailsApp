<div class="container entry-content">
  <div class="row">
    <div class="col-md-12 page-header">
<h1>Create e-Prescription</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 main-content button-content">
<%= form_tag(:action => 'create_submit', :patient_id => params[:patient_id]) do %>
<p>Medication:</br><%= text_field_tag(:name, nil, :required => true) %></p>
<p>Dosage:</br><%= number_field("",:dosage, :required => true, step: 0.01) %></p>
<%= submit_tag("Create", :class=>"btn btn-primary")%>
<% end %>
      </div>
    </div>
  </div>